<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ricom10.geocampus.MapaActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btAzul"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="80dp"
        android:height="30dp"
        android:background="@color/color_azul" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btVerde"
        android:layout_toEndOf="@+id/btAzul"
        android:width="80dp"
        android:height="30dp"
        android:background="@color/color_verde"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btAzul" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btAmarillo"
        android:layout_toEndOf="@+id/btVerde"
        android:width="80dp"
        android:height="30dp"
        android:background="@color/color_amarillo"
        android:layout_alignTop="@+id/btVerde"
        android:layout_toRightOf="@+id/btVerde" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btRojo"
        android:layout_toEndOf="@+id/btAmarillo"
        android:width="80dp"
        android:height="30dp"
        android:background="@color/color_rojo"
        android:layout_alignTop="@+id/btAmarillo"
        android:layout_toRightOf="@+id/btAmarillo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvColor"
        android:layout_below="@+id/btVerde"
        android:layout_marginTop="47dp"
        android:textSize="40dp"
        android:layout_toStartOf="@+id/btRojo"
        android:layout_toLeftOf="@+id/btRojo"
        android:layout_toRightOf="@+id/btAzul"
        android:layout_toEndOf="@+id/btAzul" />
</RelativeLayout>
