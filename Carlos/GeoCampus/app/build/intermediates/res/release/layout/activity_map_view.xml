<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity" >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map" tools:context=".MapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:layout="@layout/activity_map_view" />

    <TableRow
        android:id="@+id/row_filtrado"
        android:background="#ffffff"
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentTop="true">

        <TextView
            android:text="Filtrado:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_column="0"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" />

        <Spinner
            android:layout_width="150dip"
            android:layout_height="match_parent"
            android:id="@+id/filtros"
            android:background="#77ccffde"
            android:layout_alignParentRight="true"/>

        <CheckBox
            android:id="@+id/checkpropios"
            android:text="Propios"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>
    </TableRow>





</RelativeLayout><!-- From: file:/C:/Users/Giraldillo/workspace/geoCamp/Carlos/GeoCampus/app/src/main/res/layout/activity_map_view.xml -->