<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_Gestionar"
        android:id="@+id/btGestionar"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:width="130dp"
        android:height="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_Mapa"
        android:id="@+id/btMapa"
        android:layout_toEndOf="@+id/btGestionar"
        android:width="130dp"
        android:height="90dp"
        android:layout_alignTop="@+id/btGestionar"
        android:layout_toRightOf="@+id/btGestionar"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_Crear"
        android:id="@+id/btCrear"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/btMapa"
        android:layout_alignStart="@+id/btMapa"
        android:width="130dp"
        android:height="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button3"
        android:layout_toStartOf="@+id/btMapa"
        android:width="130dp"
        android:height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btMapa"
        android:layout_marginBottom="146dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/company"
        android:id="@+id/textView"
        android:layout_marginTop="70dp"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btGestionar"
        android:layout_alignStart="@+id/btGestionar"
        android:layout_alignRight="@+id/btMapa"
        android:layout_alignEnd="@+id/btMapa" />

</RelativeLayout>
